node {   
    stage('Clone repository') {
        git credentialsId: 'github_for_nails', url: 'git@github.com:spa086/nails4you.git'
    }
    
    stage('Build image') {
       dockerImage = docker.build("spaskyson/nails_django:latest")
    }
    
 stage('Push image') {
        withDockerRegistry([ credentialsId: "dockerhub", url: "" ]) {
        dockerImage.push()
        }
    }
    def remote = [:]
    remote.name = "node-1"
    remote.host = "192.168.1.55"
    remote.allowAnyHosts = true
    withCredentials([sshUserPrivateKey(credentialsId: 'nailsPem', keyFileVariable: 'identity', usernameVariable: 'userName')]) {
        remote.user = userName
        remote.identityFile = identity
  stage('Deploy'){
        sshCommand remote: remote, command: 'docker stop nails4you'
        sshCommand remote: remote, command: 'docker run --name nails4you --rm -d -p  8000:8000 spaskyson/nails_django:latest'

   
}
} 
}
